<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.LoginViewController">
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="58.0" layoutY="30.0" text="Enter Username" />
            <Label fx:id="errorLabel" layoutX="36.0" layoutY="100.0" text="Username already taken" textFill="RED" visible="false" />
            <TextField fx:id="usernameInput" layoutX="26.0" layoutY="75.0" />
            <Button fx:id="submitButton" layoutX="75.0" layoutY="136.0" mnemonicParsing="false" onAction="#LoginOnClick" text="Submit" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
